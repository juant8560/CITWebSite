---
interface Props {
  content: any;
  isCareer?: boolean;
  locale?: string;
}
const { content, isCareer = false, locale = 'es' } = Astro.props;
const isEN = locale === 'en';
---

<section class="hero-footer" style={`background-image: url(${content?.backgroundImg})`}>
  <div class="wrapper">
    <h1 class="title heading-large">
      {content?.titleEN || content?.titleES}
    </h1>
    <p class="description">
      {content?.captionEN || content?.captionES}
    </p>
    <button class="button">
      <a
        style="background-size: 0"
        href={isCareer ? 'http://jobs.cit.hn/' : 'https://wkf.ms/3jKnYSm'}
        target="_blank"
        rel="noopener noreferrer"
      >
        {isCareer ? (isEN ? 'Apply Now' : 'Aplica ahora') : (isEN ? 'Contact us' : 'Cont√°ctenos')}
      </a>
    </button>
  </div>
</section>

<style lang="scss">
  @use '@styles/variables.scss' as *;

  .hero-footer {
    position: relative;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    width: 100%;
    height: 35.1rem;
    padding-inline: 3.7rem;
    padding-top: 5.5rem;
    text-align: center;
  }

  .wrapper {
    position: absolute;
    top: 0; bottom: 0; left: 0; right: 0;
    background-color: rgba($primaryBackgroundColor, 0.7);
    display: grid;
    place-content: center;
    text-align: center;
  }

  .title {
    color: $primaryTextColor;
    text-transform: capitalize;
    padding-bottom: 3.5rem;
  }

  .description {
    color: $secondaryTextColor;
    padding-bottom: 2.5rem;
    padding-inline: 4.3rem;
    text-shadow: 0 0 4px $primaryBackgroundColor;
    max-width: 1440px;
    margin: 0 auto;
  }

  .button {
    margin: 0 auto;
    background-color: $thirdColor;
    color: $primaryTextColor;
    border-radius: 0.5rem;
    width: 12.5rem;
    height: 4.3rem;
    border: none;
    cursor: pointer;
    a { color: $primaryTextColor; background: none; }
  }

  @media screen and (min-width: 599px) {
    .hero-footer { padding-top: 8.9rem; padding-bottom: 8.6rem; }
    .title { padding-bottom: 4rem; }
    .description { padding-bottom: 4rem; padding-inline: 3.7rem; max-width: 80rem; }
    .button { width: 14.1rem; height: 5.1rem; }
  }
</style>
